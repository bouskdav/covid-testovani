@model List<FiremniTestovani.Web.Models.UserManagement.ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Manage";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"> Role</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item active">Administrace</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container">
            <!-- Info boxes -->
            <div class="row">
                <div class="col-12">
                    <form method="post">
                        <div class="card">
                            <div class="card-header">
                                <h2>Manage User Roles</h2>
                                Add/Remove Roles for User / @ViewBag.UserName.
                            </div>
                            <div class="card-body">
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <div class="form-check m-1">
                                        <input type="hidden" asp-for="@Model[i].RoleId" />
                                        <input type="hidden" asp-for="@Model[i].RoleName" />
                                        <input asp-for="@Model[i].Selected" class="form-check-input" />
                                        <label class="form-check-label" asp-for="@Model[i].Selected">
                                            @Model[i].RoleName
                                        </label>
                                    </div>
                                }
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                            <div class="card-footer">
                                <input type="submit" value="Update" class="btn btn-primary"
                                       style="width:auto" />
                                @*<a asp-action="EditUser" asp-route-id="@ViewBag.userId"
                                   class="btn btn-primary" style="width:auto">Cancel</a>*@
                                <a asp-action="Index" class="btn btn-primary" style="width:auto">Cancel</a>
                            </div>
                        </div>
                    </form>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </div>
</div>